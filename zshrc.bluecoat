# Workflow aliases and functions
p42fs () { # Convert my p4client scheme to my filesystem scheme
	if [[ -z $P4CLIENT ]]; then
		return 1
	fi
	echo ~/proj/$(echo $P4CLIENT | cut -d_ -f2-)
}

cdproj () {
	if [[ ! -z $1 ]]; then
		p4client $1
	fi

  TO_DIR=$(p42fs)
	if [[ -d $TO_DIR ]]; then
		cd $TO_DIR 
		if [[ $P4CLIENT == 'gaelan_scorpius' ]]; then
			cd main/src
		fi
	else
		echo "$0: Assumed directory non-existant, check \$P4CLIENT"
		return 1
	fi
}
cgrep () {
	find . -depth \( -iname '*.[ch]' -or -iname '*.[ch]pp' \) -type f -print0 | xargs -0 grep $1
}
hgrep () {
	find . -depth \( -iname '*.h' -or -iname '*.hpp' \) -type f -print0 | xargs -0 grep $1
}
jgrep () {
	find . -iname '*.java' -type f -print0 | xargs -0 grep $1
}
p4client () {
	if [[ -z $1 ]]; then
		echo $P4CLIENT
	else
		export P4CLIENT=gaelan_$1
	fi
}
sbochs () {
	pushd
	cd ~/sr/coroner
	bochs -r $1
	popd
}

