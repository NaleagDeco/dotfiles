source ~/Code/dotfiles/zshrc.common

get_latest_dashboard_db() {
	rsync dev1:$(ssh dev1 "ls -1 /data/engineering/database-dumps/dashboard/dashboard_backup* | tail -n 1") .
}

get_latest_dw_db() {
	rsync dev1:$(ssh dev1 "ls -1 /data/engineering/database-dumps/kon_dw_config/kon_dw_config_backup* | tail -n 1") .
}

reset_db() {
	echo "drop database dashboard; drop database kon_dw_config;" | mysql -u root -p""
	echo "create database dashboard; create database kon_dw_config;" | mysql -u root -p""
	for i in "%" "localhost"; do
		echo "grant all on dashboard.* to dashboard@'${i}' identified by 'dashboard';" | mysql -u root -p""
	done
	for i in "%" "localhost"; do
		echo "grant all on kon_dw_config.* to kontagent@'${i}' identified by 'kontagent';" | mysql -u root -p""
	done
	echo "flush privileges;" | mysql -u root -p""
}

